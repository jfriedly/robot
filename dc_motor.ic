#define MOTOR_PORT 1

int main() {
    printf("\nMotor forward");
    motor(MOTOR_PORT, 100);
    sleep(2.);
    
    printf("\nMotor stopped");
    motor(MOTOR_PORT, 0);
    sleep(2.);
    
    printf("\nMotor backward");
    motor(MOTOR_PORT, -100);
    sleep(2.);
    
    printf("\nDone!");
    motor(MOTOR_PORT, 0);
}
