#use "util.ic"

#define MOT_FORWARD  0
#define MOT_CW       1
#define MOT_CCW      2
#define MOT_BACKWARD 3

#define MOTOR_LEFT  3
#define MOTOR_RIGHT 1

#define MOTOR_POWER 100

int main() {
    int sel = 0, old = -1;
    ao();
    for(;;) {
        while(!start_button()) {
            sel = knob() / 64;
            if(sel != old) {
                switch(sel) {
                    case MOT_FORWARD:
                      printf("Forward\n");
                    break;
                    case MOT_CW:
                      printf("Pivot clockwise\n");
                    break;
                    case MOT_CCW:
                      printf("Pivot ctrclkwise\n");
                    break;
                    case MOT_BACKWARD:
                      printf("Backward\n");
                    break;
                }
                old = sel;
            }
        }
        
        switch(sel) {
            case MOT_FORWARD:
              motor(MOTOR_LEFT, MOTOR_POWER);
            motor(MOTOR_RIGHT, MOTOR_POWER);
            break;
            case MOT_CW:
              motor(MOTOR_LEFT, -MOTOR_POWER);
            motor(MOTOR_RIGHT, MOTOR_POWER);
            break;
            case MOT_CCW:
              motor(MOTOR_LEFT, MOTOR_POWER);
            motor(MOTOR_RIGHT, -MOTOR_POWER);
            break;
            case MOT_BACKWARD:
              motor(MOTOR_LEFT, -MOTOR_POWER);
            motor(MOTOR_RIGHT, -MOTOR_POWER);
            break;
        }
        
        while(!stop_button())
          ;
        
        ao();
    }
}
